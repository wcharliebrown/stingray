# Sting Ray Configuration
# Copy this file to .env and modify as needed

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=stingray

# Debugging Configuration
DEBUGGING_MODE=false

# Logging Configuration
# 1 = Errors only
# 2 = Errors and user logins
# 3 = Verbose (all access logs)
LOGGING_LEVEL=1

# Test User Credentials (for testing only)
TEST_ADMIN_USERNAME=admin
TEST_ADMIN_PASSWORD=admin
TEST_CUSTOMER_USERNAME=customer
TEST_CUSTOMER_PASSWORD=customer
TEST_ENGINEER_USERNAME=engineer
TEST_ENGINEER_PASSWORD=engineer
TEST_WRONG_PASSWORD=wrongpassword

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=25
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Sting Ray CMS

# DKIM Configuration
DKIM_PRIVATE_KEY_FILE=.DKIM_KEY.txt
DKIM_SELECTOR=default
DKIM_DOMAIN=yourdomain.com